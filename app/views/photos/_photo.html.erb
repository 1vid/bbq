<div class="photo">
  <% photo_title = "#{t('.uploaded_by')} #{render partial: 'users/user', object: photo.user}" %>
  <% if current_user_can_edit?(photo) %>
    <% photo_title << link_to(
          fa_icon('trash'), event_photo_path(photo.event, photo),
          method: :delete, data: { confirm: t('.destroy_confirm') }
        ) %>
  <% end %>
  <%= link_to(
    image_tag(photo.photo.variant(resize_to_limit: [200, 200])),
    photo.photo, data: { lightbox: 'event-gallery', title: photo_title }
    )%>
</div>
