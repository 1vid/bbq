<h1><%= t '.title' %></h1>
<%=  link_to image_tag(@photo.photo.variant(resize_to_limit: [100, 100])), @photo.photo %>
<p><%= t '.author' %>: <strong><%= @photo.user.name %></strong></p>

<hr/>

<%= t '.event' %>
<h3><%= @event.title %></h3>
<a><%= link_to t('go_event'), event_url(@event) %></a>
<br>
<br>
<%= t '.datetime' %>
<h4><%= l @event.datetime %></h4>

<%= t '.owner' %>
<h4><%= @event.user.name %></h4>