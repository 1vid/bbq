<%= form_for(user, html: {multipart: true}) do |f| %>
  <%= render partial: "partials/form_errors", locals: {model: @user} %>

  <form>
    <div class="mb-3">
      <%= f.label :email, class: "form-label" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>

    <% if devise_mapping.confirmable? && user.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= user.unconfirmed_email %></div>
    <% end %>

    <div class="mb-3">
      <%= f.label :password, class: "form-label" %> <i>(не заполняй если не хочешь менять пароль)</i><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>

    <div class="mb-3">
      <%= f.label :password_confirmation, class: "form-label" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>

    <%= f.submit "Update", class: "btn btn-outline-success float-start me-3" %>
    
    <%= button_to "Уничтожить аккаунт", registration_path(user), data: { confirm: "Are you sure?" },
        method: :delete, class: "btn btn-outline-danger mb-3" %>
  <form>
<% end %>

<%= link_to "Назад", :back%>
